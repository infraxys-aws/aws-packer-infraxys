
. ../env;

ADMIN_VERSION="$(cat VERSION)";

function admin_pull() {
  docker pull quay.io/jeroenmanders/infraxys-admin:$ADMIN_VERSION;
}

function admin_reset() {
  admin_pull;
  admin_restart;
}

function admin_restart() {
    docker stop infraxys-admin;
    docker rm infraxys-admin;
    admin_up;
}

function admin_up() {
    docker create \
        --restart always \
        --network infraxys-admin \
        --name infraxys-admin \
        -v /var/run/docker.sock:/var/run/docker.sock \
        --workdir /usr/bin \
        -v "$LOCAL_DIR/config":/opt/infraxys/config:rw \
        -v "$LOCAL_DIR/docker":/opt/infraxys/docker:rw \
        -p 8082:8082 \
        quay.io/jeroenmanders/infraxys-admin:$ADMIN_VERSION;

    docker network connect infraxys-vault infraxys-admin;
    docker start infraxys-admin;
}