
. ../env;

VAULT_VERSION="$(cat VERSION)";

function reset_vault() {
    docker pull quay.io/jeroenmanders/infraxys-vault:$VAULT_VERSION;
    docker stop infraxys-vault;
    docker rm infraxys-vault;
    docker run -d \
        --restart always \
        --network infraxys-vault \
        --name infraxys-vault \
        --cap-add IPC_LOCK \
        -v "$LOCAL_DIR/data/vault":/vault/data:rw \
        quay.io/jeroenmanders/infraxys-vault:$VAULT_VERSION;

}